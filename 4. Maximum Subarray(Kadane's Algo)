class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        
        int currentSum=0, maximumSum=INT_MIN;
        
        for(int i=0;i<nums.size();i++){
            currentSum += nums[i];
            maximumSum=max(currentSum, maximumSum);
            
            if(currentSum<=0) currentSum=0;
        }
        return maximumSum;
        
    }
};
