class Solution
{
    public:
    
    void removeLoop(Node* head)
    {
        
        Node *slow = head,*fast = head;
       
       while(fast != NULL and fast->next != NULL)
       {
           fast = fast->next->next;
           slow = slow->next;
           
           if(slow == fast) break;
       }
       
       if(slow != fast) return;
       
       slow = head;
       
       if(slow == fast)
       {
           while(fast->next != slow){
               fast = fast->next;
           }
       }
       else{
       while(slow->next != fast->next)
           {
               slow = slow->next;
               fast = fast->next;
           }
       }
       
       fast->next = NULL;
   }
};
